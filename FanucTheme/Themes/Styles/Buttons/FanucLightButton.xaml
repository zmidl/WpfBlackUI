<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <ResourceDictionary.MergedDictionaries>
    <ResourceDictionary Source="FanucButton.xaml" />
  </ResourceDictionary.MergedDictionaries>
  <Style x:Key="FanucLightButtonStyle" TargetType="Button" BasedOn="{StaticResource FanucButtonStyle}">
    <Setter Property="Background" Value="{DynamicResource ButtonBackgroundLightBrush}"/>
    <Setter Property="Foreground" Value="{DynamicResource ButtonForegroundLightBrush}"/>
    <Setter Property="BorderBrush" Value="{DynamicResource ButtonBorderLightBrush}"/>
  </Style>
</ResourceDictionary>